extends layout

block content
  .category-details
    h1(style='color: #333;')= category.name

    .category-description
      p(style='color: #666;') Description: #{category.description}

    .actions-container(style='display: flex; gap: 20px; margin-top: 20px;')
      .delete-action(style='background-color: #e74c3c; color: white; padding: 15px; border-radius: 5px; cursor: pointer;')
        a(href=category.url+'/delete', style='color: white; text-decoration: none;') Delete Category

      .update-action(style='background-color: #2ecc71; color: white; padding: 15px; border-radius: 5px; cursor: pointer;')
        a(href=category.url+'/update', style='color: white; text-decoration: none;') Update Category
